<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jagjeet.nitnem.MainActivity"
    android:background="@drawable/styling"
    tools:showIn="@layout/activity_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="JAPJI SAHIB"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:background="@drawable/buttons"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="SHABAD HAZARE"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button

        android:layout_height="wrap_content"
        android:text="JAAP SAHIB"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_width="230dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"

        android:layout_height="wrap_content"
        android:text="CHAUPAI SAHIB"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="TAV PRASAD SAVAIYE"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button5"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="REHRAS SAHIB"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button7"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="ANAND SAHIB"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button6"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="SOHILA"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button8"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="ARDAAS"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:id="@+id/button9"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like us on Facebook"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:id="@+id/button10"
        android:textSize="18dp"
        android:layout_gravity="center|bottom"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
