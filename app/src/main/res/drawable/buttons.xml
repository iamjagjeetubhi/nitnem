<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient

                android:startColor="#4d8eb9"
                android:endColor="#a15b80"
                android:angle="45" />
            <!-- start colour upper wala and end colour niche wala-->
            <stroke
                android:width="1dp"
                android:color="#feffff" />
            <!-- button da outer colour-->
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="#00000000" />
            <stroke
                android:width="1dp"
                android:color="#feffff" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>